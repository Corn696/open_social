{{ attach_library('social_sharing_post/sharing-post')}}

<div class="share-wrapper">
  {% if url %}
    <button id="share-button" class="btn btn-link btn-flat--gray">{{ 'Share'|t }}</button>

    <div class="modal" id="share-modal">
      <div class="modal-content">

        <div class="modal-header">
          <span class="close">&times;</span>
          <div><strong>{{ 'Share a link to this post'|t }}</strong></div>
        </div>

        <div class="modal-body">
          <input type="text" value="{{ url }}" id="input-url" readonly>
        </div>

        <div class="modal-footer">
          <div class="actions">
            <div id="snackbar">{{ 'Link copied to clipboard.'|t }}</div>
            <button class="btn-link" id="copy-link-clipboard">{{ 'Copy link'|t }}</button>
          </div>

          <ul class="media">
            <li class="facebook">
              <a href="https://www.facebook.com/share.php?u={{ url }}" target="_blank">
                <span class="fa-facebook-f fab"></span>
              </a>
            </li>
            <li class="twitter">
              <a class="twitter-share-button" target="_blank" href="https://twitter.com/intent/tweet?text={{ post ~ url }}">
                <span class="fa-twitter fab fa-twitter"></span>
              </a>
            </li>
            <li class="linkedin">
              <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ url }}" target="_blank">
                <span class="fa-linkedin fab fa-linkedin-in"></span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  {% endif %}
</div>

